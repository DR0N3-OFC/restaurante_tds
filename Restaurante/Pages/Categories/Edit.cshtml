@page "{id:int}"
@model Aula03.pages.Categories.Edit
@{
}
<div class="container mt-5">
	<div class="row">
		<div class="col-md-4 mx-auto criar">
			<h1>Editar Categoria</h1>
			<form method="post">
				<div asp-validation-summary="ModelOnly" class="text-dange"></div>
				<input type="hidden" asp-for="Category.CategoryID" />
				<div class="form-group">
					<label asp-for="Category.Name">Nome:</label>
					<input asp-for="Category.Name" class="form-control" onkeyup="handleText(event)" required />
					<span asp-validation-for="Category.Name" class="text-dange"></span>
				</div>
				<div class="form-group">
					<input type="submit" class="btn btn-primary" value="Salvar" />
					<a asp-page="/Categories/Index" class="btn btn-secondary">Cancelar</a>
				</div>
			</form>
		</div>
	</div>
</div>

<script>
	const lettersOnly = (value) => {
		const regex = /^[a-zA-ZÀ-ú\s'-]*$/;
		return regex.test(value) && !/\d/.test(value);
	}

	const handleText = (event) => {
		let input = event.target;
		let value = input.value;
		if (!lettersOnly(value)) {
			input.value = value.slice(0, -1);
		}
	};
</script>
