@page "{id:int}"
@model Aula03.pages.Tables.Edit
@{
}
<div class="container mt-5">
	<div class="row">
		<div class="col-md-4 mx-auto criar">
			<h1>Editar Garçom</h1>
			<form method="post">
				<div asp-validation-summary="ModelOnly" class="text-dange"></div>
				<input type="hidden" asp-for="table.TableID" />
				<div class="form-group">
					<label asp-for="table.Name">Nome:</label>
					<input asp-for="table.Name" class="form-control" />
					<span asp-validation-for="table.Name" class="text-dange"></span>
				</div>
				<div class="form-group">
					<input type="submit" class="btn btn-primary" value="Salvar" />
					<a asp-page="/Tables/Index" class="btn btn-secondary">Cancelar</a>
				</div>
			</form>
		</div>
	</div>
</div>


