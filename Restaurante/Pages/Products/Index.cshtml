@page
@model Aula03.pages.Products.Index
@{
}

<div class="container">
    <hr />
    <td><a asp-page="/Products/Create">Criar Novo Produto</a></td>
    <hr />

    <body>
        <div>
            <table class="table table-bordered table-hover table-striped">
                <thead>
                    <tr>
                        <th>Nome</td>
                        <th>Descrição</td>
                        <th>Preço</td>
                        <th>Categoria</td>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var eventModel in Model.ProductsList)
                    {
                        <tr>
                            <td>@Html.DisplayFor(model => eventModel.Name)</td>
                            <td>@Html.DisplayFor(model => eventModel.Description)</td>
                            <td>@Html.DisplayFor(model => eventModel.Price)</td>
                            <td>@Html.DisplayFor(model => eventModel.Category!.Name)</td>
                            <td>
                                <a asp-page="./Edit" asp-route-id="@eventModel.ProductID">Alterar</a>
                                <a asp-page="./Delete" asp-route-id="@eventModel.ProductID">Remover</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </body>
</div>