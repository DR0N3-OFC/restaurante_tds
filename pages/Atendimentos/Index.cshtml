@page
@model Aula03.pages.Atendimentos.Index
@{
}

<hr />

<body>
    <div>
        <table class="table table-bordered table-hover">
            <thead>
                <tr>
                    <td>@Html.DisplayNameFor(model => model.AtendimentosList[0].AtendimentoID)</td>
                    <td>Garçom</td>
                    <td>Mesa</td>
                    <td>Total</td>
                </tr>
            </thead>
            <tbody>
                @foreach (var eventModel in Model.AtendimentosList)
                {
                    <tr>
                        <td>@Html.DisplayFor(model => eventModel.AtendimentoID)</td>
                        <td>@Html.DisplayFor(model => eventModel.Garcom!.Name)</td>
                        <td>@Html.DisplayFor(model => eventModel.Mesa!.MesaID)</td>
                        @{if (eventModel.Produtos.Count==0)
                            {
                                <td>R$0,00</td>
                            }
                            else
                            {
                                double? sumOfPrices = eventModel.Produtos.Sum(p => p.Price);
                                <td>@string.Format("R${0:N2}", sumOfPrices)</td>
                            }
                        }
                        <td>@Html.DisplayFor(model => eventModel.InitDate)</td>
                        <td>@Html.DisplayFor(model => eventModel.FinishDate)</td>
                        
                        <td>
                            <a asp-page="./Delete" asp-route-id="@eventModel.AtendimentoID">Remover</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</body>