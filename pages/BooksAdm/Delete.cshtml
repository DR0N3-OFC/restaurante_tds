@page "{id:int}"
@model Aula03.pages.BooksAdm.Delete
@{
}

<h1>Detalhes do Item para Remover</h1>

<div>
	<p><strong>Nome:</strong>@Model.Book.Name</p>
	<p><strong>Descrição:</strong>@Model.Book.Author</p>
	<p><strong>Descrição:</strong>@Model.Book.Desc</p>
	<p><strong>Data:</strong>@Model.Book.PublicationYear</p>
</div>

<form method="post">
	<div class="group-form">
		<input type="submit" value="Deletar" class="btn btn-danger" />
		<a asp-page="/BooksAdm/Index" class="btn btn-primary">Voltar à Lista</a>
	</div>
</form>
