@page
@model Aula03.pages.BooksAdm.Create
@{
}
<h1>Adicionar Livro</h1>
<div>
	<div class="row">
		<div class="col-md-4">
			<form method="post">
				<div asp-validation-summary="ModelOnly" class="text-dange"></div>
				<input type="hidden" asp-for="Book.BookID" />
				<div class="form-group">
					<label asp-for="Book.Name">Título:</label>
					<input asp-for="Book.Name" class="form-control" />
					<span asp-validation-for="Book.Name" class="text-dange"></span>
				</div>
				<div class="form-group">
					<label asp-for="Book.Author">Autor:</label>
					<input asp-for="Book.Author" class="form-control" />
					<span asp-validation-for="Book.Author" class="text-dange"></span>
				</div>
				<div class="form-group">
					<label asp-for="Book.Desc">Descrição:</label>
					<input asp-for="Book.Desc" class="form-control"></textarea>
				</div>
				<div class="form-group">
					<label asp-for="Book.PublicationYear">Ano de Publicação:</label>
					<input asp-for="Book.PublicationYear" type="int" class="form-control" />
				</div>
				<div class="form-group">
					<label asp-for="Book.Price">Preço:</label>
					<input asp-for="Book.Price" type="int" class="form-control" />
				</div>
				<div class="form-group">
					<label>Link:</label>
					<input name="Link" class="form-control" />
					<span name="Link" class="text-dange"></span>
				</div>
				<div class="form-group">
					<input type="submit" class="btn btn-primary" value="Salvar" />
					<a asp-page="/BooksAdm/Index" class="btn btn-secondary">Cancelar</a>
				</div>
			</form>
		</div>
	</div>
</div>