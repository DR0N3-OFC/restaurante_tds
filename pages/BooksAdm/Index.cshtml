@page
@model Aula03.pages.BooksAdm.Index
@{
}

<hr />
<td><a asp-page="/BooksAdm/Create">Criar Novo Livro</a></td>
<hr />

<body>
    <div>
        <table class="table table-bordered table-hover">
            <thead>
                <tr>
                    <td>@Html.DisplayNameFor(model => model.BooksList[0].BookID)</td>
                    <td>@Html.DisplayNameFor(model => model.BooksList[0].Name)</td>
                    <td>@Html.DisplayNameFor(model => model.BooksList[0].Desc)</td>
                    <td>@Html.DisplayNameFor(model => model.BooksList[0].PublicationYear)</td>
                    <td>@Html.DisplayNameFor(model => model.BooksList[0].Price)</td>
                </tr>
            </thead>
            <tbody>
                @foreach (var eventModel in Model.BooksList)
                {
                    <tr>
                        <td>@Html.DisplayFor(model => eventModel.BookID)</td>
                        <td>@Html.DisplayFor(model => eventModel.Name)</td>
                        <td>@Html.DisplayFor(model => eventModel.Author)</td>
                        <td>@Html.DisplayFor(model => eventModel.PublicationYear)</td>
                        <td>@Html.DisplayFor(model => eventModel.Price)</td>
                        <td>
                            <a asp-page="./Edit" asp-route-id="@eventModel.BookID">Alterar</a>
                            <a asp-page="./Details" asp-route-id="@eventModel.BookID">Visualizar</a>
                            <a asp-page="./Delete" asp-route-id="@eventModel.BookID">Remover</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</body>