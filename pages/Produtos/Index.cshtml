@page
@model Aula03.pages.Produtos.Index
@{
}

<hr />
<td><a asp-page="/Produtos/Create">Criar Novo Produto</a></td>
<hr />

<body>
    <div>
        <table class="table table-bordered table-hover table-striped">
            <thead>
                <tr>
                    <th>Nome</td>
                    <th>Descrição</td>
                    <th>Preço</td>
                    <th>Categoria</td>
                </tr>
            </thead>
            <tbody>
                @foreach (var eventModel in Model.ProdutosList)
                {
                    <tr>
                        <td>@Html.DisplayFor(model => eventModel.Name)</td>
                        <td>@Html.DisplayFor(model => eventModel.Desc)</td>
                        <td>@Html.DisplayFor(model => eventModel.Price)</td>
                        <td>@Html.DisplayFor(model => eventModel.Categoria!.Name)</td>
                        <td>
                            <a asp-page="./Edit" asp-route-id="@eventModel.ProdutoID">Alterar</a>
                            <a asp-page="./Delete" asp-route-id="@eventModel.ProdutoID">Remover</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</body>