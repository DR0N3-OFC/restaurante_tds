@page
@model Aula03.pages.Produtos.Create
@{
}

<div class="container mt-5">
	<div class="row">
		<div class="col-md-6 mx-auto criar">
			<h1>Adicionar Produto</h1>
			<div asp-validation-summary="ModelOnly" class="text-danger"></div>
			<form method="post">
				<div asp-validation-summary="ModelOnly" class="text-danger"></div>
				<input type="hidden" asp-for="Produto.ProdutoID" />
				<div class="form-group">
					<label asp-for="Produto.Name">Título:</label>
					<input asp-for="Produto.Name" class="form-control" />
					<span asp-validation-for="Produto.Name" class="text-danger"></span>
				</div>
				<div class="form-group">
					<label asp-for="Produto.Desc">Descrição:</label>
					<input asp-for="Produto.Desc" class="form-control" />
					<span asp-validation-for="Produto.Desc" class="text-danger"></span>
				</div>
				<div class="form-group">
					<label asp-for="Produto.Categoria">Categoria: </label>
					
					@foreach(var categoria in Model.CategoriasList)
					{
						<div class="form-check form-check-inline">			
							<input class="form-control" type="radio" id="@categoria.Name" name="CatID" value="@categoria.CategoriaID"/>
							<label for="CatID">@categoria.Name</label>
						</div>
					}
				</div>
				<div class="form-group">
					<label asp-for="Produto.Price">Preço:</label>
					<input asp-for="Produto.Price" type="int" class="form-control" />
				</div>
				<div class="form-group">
					<input type="submit" value="Salvar" class="btn btn-primary" />
					<a asp-page="/Produtos/Index" class="btn btn-secondary">Cancelar</a>
				</div>
			</form>
		</div>
	</div>
</div>