@page "{id:int}"
@model Aula03.pages.Garcons.Delete
@{
}

<h1>Detalhes do Garçom a Remover</h1>

<div>
	<p><strong>Nome:</strong>@Model.Garcom.Name</p>
	<p><strong>Sobrenome:</strong>@Model.Garcom.SecondName</p>
	<p><strong>Telefone:</strong>@Model.Garcom.Telefone</p>
	<p><strong>Data de Nascimento:</strong>@Model.Garcom.BirthDate</p>
</div>

<form method="post">
	<div class="group-form">
		<input type="submit" value="Deletar" class="btn btn-danger" />
		<a asp-page="/Garcons/Index" class="btn btn-primary">Voltar à Lista</a>
	</div>
</form>
