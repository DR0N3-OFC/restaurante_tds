@page
@model Aula03.pages.Events.Index
@{
}
<h1>Eventos Registrados</h1>

<hr />
<td><a asp-page="/Events/Create">Criar Novo Evento</a></td>
<hr />

<div>
    <table>
        <thead>
            <tr>
                <td>@Html.DisplayNameFor(model => model.EventsList[0].EventID)</td>
                <td>@Html.DisplayNameFor(model => model.EventsList[0].Name)</td>
                <td>@Html.DisplayNameFor(model => model.EventsList[0].Desc)</td>
                <td>@Html.DisplayNameFor(model => model.EventsList[0].Date)</td>
            </tr>
        </thead>
        <tbody>
            @foreach (var eventModel in Model.EventsList)
            {
                <tr>
                    <td>@Html.DisplayFor(model => eventModel.EventID)</td>
                    <td>@Html.DisplayFor(model => eventModel.Name)</td>
                    <td>@Html.DisplayFor(model => eventModel.Desc)</td>
                    <td>@Html.DisplayFor(model => eventModel.Date)</td>
                    <td>
                        <a asp-page="./Edit" asp-route-id="@eventModel.EventID">Alterar</a>
                        <a asp-page="./Details" asp-route-id="@eventModel.EventID">Visualizar</a>
                        <a asp-page="./Delete" asp-route-id="@eventModel.EventID">Remover</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>